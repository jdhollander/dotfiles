general {
        output_format = "i3bar"
        colors = true
        interval = 1
	color_good = "#93d44f"
	color_degraded = "#ffc123"
	color_bad = "#ff8d8d"
}

order += "disk /"
order += "wireless wlan0"
order += "ethernet eth0"
#order += "net_rate"
order += "load"
order += "tztime local"

wireless wlp3s0{
        format_up = "ï‡«  (%quality at %essid, %bitrate) %ip"
}

ethernet enp6s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip"
}

#net_rate {
#	format = "{total}"
#}


tztime local {
        format = "%A %e %B, %Y %H:%M:%S %Z"
}

load {
        format = "Load: %1min, %5min, %15min"
}

disk "/" {
        format = "%free"
}
